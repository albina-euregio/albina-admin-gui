{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "$schema": {
      "description": "URL of JSON Schema awsome.schema.json",
      "type": "string"
    },
    "date": {
      "description": "Initial date/time when opening the dashboard",
      "type": "string"
    },
    "dateMax": {
      "type": "string"
    },
    "dateMin": {
      "type": "string"
    },
    "dateStepSeconds": {
      "description": "Seconds between two models runs",
      "type": "number"
    },
    "filters": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "chartRichLabel": {
            "type": "string",
            "enum": ["grainShape", "highlight", "label", "symbol"]
          },
          "chartType": {
            "type": "string",
            "enum": ["bar", "rose"]
          },
          "chartAxisRange": {
            "description": "Min and max value for chart range when plotting values on a parametric chart",
            "minItems": 2,
            "maxItems": 2,
            "type": "array",
            "items": {
              "type": "number"
            }
          },
          "default": {
            "type": "string",
            "enum": ["classify", "label"]
          },
          "key": {
            "description": "Key name defining how to obtain the value from a GeoJSON Feature representing this filter, such as `path.to.variable.in.json`, evaluated relative to the `properties` of a GeoJSON Feature.",
            "type": "string"
          },
          "label": {
            "description": "Label text shown in the chart",
            "type": "string"
          },
          "labelI18nKey": {
            "description": "Key in https://gitlab.com/albina-euregio/albina-admin-gui/-/blob/master/src/assets/i18n/en.json used for i18n (internationalization)",
            "type": "string"
          },
          "selectedValues": {
            "description": "Initially selected values, use 'nan' for features w/o specification",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "stabilityIndex": {
            "description": "Whether this filter represents a snowpack stability index",
            "type": "boolean"
          },
          "type": {
            "description": "Identifier for this filter",
            "type": "string"
          },
          "url": {
            "description": "URL to GeoJSON FeatureCollection. Timestamps in the format 2023-11-12_06-00-00 are evaluated.",
            "type": "string",
            "format": "uri"
          },
          "values": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "borderColor": {
                  "description": "Border stroke color",
                  "type": "string"
                },
                "borderWidth": {
                  "description": "Border stroke width",
                  "default": 2,
                  "type": "number"
                },
                "borderDashArray": {
                  "description": "Border stroke dash-array, see https://developer.mozilla.org/en-US/docs/Web/CSS/stroke-dasharray",
                  "default": "",
                  "type": "string"
                },
                "color": {
                  "description": "Fill color",
                  "type": "string"
                },
                "label": {
                  "description": "Label string shown inside the marker",
                  "type": "string"
                },
                "labelI18nKey": {
                  "description": "Key in https://gitlab.com/albina-euregio/albina-admin-gui/-/blob/master/src/assets/i18n/en.json used for i18n (internationalization)",
                  "type": "string"
                },
                "labelColor": {
                  "description": "Label color",
                  "default": "#000",
                  "type": "string"
                },
                "labelFontSize": {
                  "description": "Label font size, in pt",
                  "default": 12,
                  "type": "number"
                },
                "legend": {
                  "description": "Legend string shown in the chart, defaults to label",
                  "type": "string"
                },
                "numericRange": {
                  "description": "An interval given as array of [lower bound, upper bound] where the lower bound is inclusive and the upper bound is exclusive",
                  "minItems": 2,
                  "maxItems": 2,
                  "type": "array",
                  "items": {
                    "type": "number"
                  }
                },
                "opacity": {
                  "description": "Marker opacity",
                  "default": 1,
                  "type": "number"
                },
                "fillOpacity": {
                  "description": "Polygon fill opacity",
                  "default": 0.8,
                  "type": "number"
                },
                "radius": {
                  "description": "Radius of the circle marker, in pixels",
                  "default": 40,
                  "type": "number"
                },
                "radiusByZoom": {
                  "description": "Radius of the circle marker, as array indexed by the map zoom level",
                  "minItems": 19,
                  "maxItems": 19,
                  "type": "array",
                  "items": {
                    "type": "number"
                  }
                },
                "value": {
                  "type": "string"
                },
                "weight": {
                  "description": "Stroke width, in pixels",
                  "default": 0,
                  "type": "number"
                },
                "zIndexOffset": {
                  "description": "The explicit zIndex of this marker",
                  "default": 0,
                  "type": "number"
                }
              },
              "required": ["color", "label", "value"],
              "additionalProperties": false
            }
          }
        },
        "required": ["chartRichLabel", "chartType", "key", "label", "type", "values"],
        "additionalProperties": false
      }
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "description": "Identifier shown in source multiselect",
            "type": "string"
          },
          "domain": {
            "description": "Domain identifier used in AWSOME, for instance tirol24",
            "type": "string"
          },
          "toolchain": {
            "description": "Toolchain identifier used in AWSOME, for instance gridded-chain",
            "type": "string"
          },
          "url": {
            "description": "URL to GeoJSON FeatureCollection. Timestamps in the format 2023-11-12_06-00-00 are evaluated.",
            "type": "string",
            "format": "uri"
          },
          "detailsTemplates": {
            "description": "Template for details HTML. The details are shown in the sidebar after clicking an marker on the map. Placeholders such as `{path.to.variable.in.json}` are evaluated relative to the `properties` of a GeoJSON Feature.",
            "default": [],
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "label": {
                  "type": "string"
                },
                "template": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          },
          "tooltipTemplate": {
            "description": "Template for tooltip HTML. Tooltip is shown when hovering the marker on the map. Placeholders such as `{path.to.variable.in.json}` are evaluated relative to the `properties` of a GeoJSON Feature.",
            "type": "string"
          },
          "imageOverlays": {
            "description": "Image overlays to be shown on the map.",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "description": "Identifier shown in map layer control",
                  "type": "string"
                },
                "imageUrl": {
                  "type": "string",
                  "format": "uri"
                },
                "imageBounds": {
                  "description": "Image bounds such as [[40.712,-74.227],[40.774,-74.125]]",
                  "minItems": 2,
                  "maxItems": 2,
                  "type": "array",
                  "items": {
                    "minItems": 2,
                    "maxItems": 2,
                    "type": "array",
                    "items": {
                      "type": "number"
                    }
                  }
                },
                "opacity": {
                  "description": "The opacity of the image overlay.",
                  "type": "number"
                },
                "zIndex": {
                  "description": "The explicit zIndex of the overlay layer.",
                  "type": "number"
                },
                "className": {
                  "description": "A custom class name to assign to the image. Empty by default.",
                  "default": "",
                  "type": "string"
                }
              },
              "required": ["name", "imageUrl", "imageBounds", "className"],
              "additionalProperties": false
            }
          }
        },
        "required": ["detailsTemplates"],
        "additionalProperties": false
      }
    },
    "mapCenter": {
      "default": [47.3, 11.3, 8],
      "description": "Map center given as [latitude, longitude, zoom]",
      "minItems": 3,
      "maxItems": 3,
      "type": "array",
      "items": {
        "type": "number"
      }
    },
    "regions": {
      "type": "object",
      "properties": {
        "url": {
          "description": "URL to GeoJSON FeatureCollection for micro-region polygons. For instance, https://regions.avalanches.org/micro-regions/latest/AT-07_micro-regions.geojson.json",
          "type": "string",
          "format": "uri"
        }
      },
      "additionalProperties": false
    },
    "hazardChart": {
      "default": {
        "xType": "size_estimate"
      },
      "type": "object",
      "properties": {
        "xType": {
          "default": "size_estimate",
          "type": "string"
        },
        "xAxisLabels": {
          "description": "Array of axis labels (indexed by the value)",
          "type": "array",
          "items": {
            "type": "number"
          }
        }
      },
      "required": ["xType"],
      "additionalProperties": false
    },
    "timeseriesChart": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["date", "dateStepSeconds", "filters", "sources", "mapCenter", "hazardChart"],
  "additionalProperties": false
}
